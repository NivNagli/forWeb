<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
<link href="/your-path-to-fontawesome/css/all.css" rel="stylesheet">
</head>
<body>
    <%- include('../includes/head-navigation.ejs') %>
    <%- include('../includes/app-navigation.ejs') %>
    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="signup-form" action="/signup" method="POST">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input type="email" name="email" id="email"
                class="<%= validationErrors.find(error => error.param === 'email') ? 'invalid' : '' %>"
                value="<%= oldInput.email %>"> 
            </div>

            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password"
                class="<%= validationErrors.find(error => error.param === 'password') ? 'invalid' : '' %>"
                value="<%= oldInput.password %>"> 
            </div>

            <div class="form-control">
                <label for="password">Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword"
                class="<%= validationErrors.find(error => error.param === 'confirmPassword') ? 'invalid' : '' %>"
                value="<%= oldInput.confirmPassword %>"> 
            </div>

            <div class="form-control">
                <label for="username">Platform Username</label>
                <input type="text" name="username" id="username"
                class="<%= validationErrors.find(error => error.param === 'username') ? 'invalid' : '' %>"
                value="<%= oldInput.username %>"> 
            </div>
            
            <div class="radio-group">
                <input type="radio" id="battle" value="battle" name="selector">
                <label class="radio-group__label" for="battle">Battle.net</label>
                <input type="radio" id="psn" value="psn" name="selector">
                <label class="radio-group__label" for="psn">Playstation</label>
                <input type="radio" id="xbox" value="xbox" name="selector">
                <label class="radio-group__label" for="xbox">Xbox</label>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="btn-wrapper">
                <button class="btn" type="submit">Signup</button>
            </div>
        </form>
    </main>

    <%- include('../includes/end.ejs') %>